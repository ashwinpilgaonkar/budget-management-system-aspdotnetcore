@page "/home"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <!-- Employee List Card -->
    <div class="card mb-4 shadow-sm" style="border-radius: 10px;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center" style="margin-bottom: 10px;">
                <h3 class="card-title">Employees</h3>
                <!-- Button to trigger the modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
                    Add New +
                </button>
            </div>
            <!-- Search Bar -->
            <form method="get">
                <div class="input-group mb-3">
                    <input type="text" name="EmployeeSearchTerm" class="form-control" placeholder="Search..." value="@Model.EmployeeSearchTerm" />
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Employee ID
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="EmployeeID" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("EmployeeID")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("EmployeeID")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                First Name
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="FirstName" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("FirstName")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("FirstName")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Last Name
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="LastName" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("LastName")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("LastName")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Date of Birth
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="DateOfBirth" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("DateOfBirth")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("DateOfBirth")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Email
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="Email" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Email")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Email")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Phone Number
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="PhoneNumber" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("PhoneNumber")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("PhoneNumber")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Hire Date
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="HireDate" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("HireDate")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("HireDate")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Job Title
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="JobTitle" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("JobTitle")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("JobTitle")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Salary
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="Salary" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Salary")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Salary")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Department
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Employee" />
                                    <input type="hidden" name="column" value="Department" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Department")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Department")"></i>
                                    </button>
                                </form>
                            </th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model.Employees)
                        {
                            if (Model.EditingEmployeeID == emp.EmployeeID)
                            {
                                <!-- Editing row (no modal) -->
                                <tr>
                                    <form method="post" asp-page-handler="SaveEmployee" asp-route-id="@emp.EmployeeID">
                                    <td><input asp-for="NewEmployee.EmployeeID" value="@emp.EmployeeID" class="form-control" readonly /></td>
                                    <td><input asp-for="NewEmployee.FirstName" value="@emp.FirstName" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.LastName" value="@emp.LastName" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.DateOfBirth" value="@emp.DateOfBirth.ToString("yyyy-MM-dd")" type="date" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.Email" value="@emp.Email" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.PhoneNumber" value="@emp.PhoneNumber" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.HireDate" value="@emp.HireDate.ToString("yyyy-MM-dd")" type="date" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.JobTitle" value="@emp.JobTitle" class="form-control" /></td>
                                    <td><input asp-for="NewEmployee.Salary" value="@emp.Salary" type="number" step="0.01" class="form-control" /></td>
                                    <td>
                                        <select asp-for="NewEmployee.DepartmentID" class="form-control">
                                                @foreach (var dept in Model.Departments)
                                                {
                                                <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                                                }
                                        </select>
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-success">Save</button>
                                    </td>
                                    </form>
                                    <td>
                                        <form method="post" asp-page-handler="CancelEditEmployee" asp-route-id="@emp.EmployeeID">
                                            <button type="submit" class="btn btn-secondary">Cancel</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <!-- Display Mode -->
                                <tr>
                                    <td>@emp.EmployeeID</td>
                                    <td>@emp.FirstName</td>
                                    <td>@emp.LastName</td>
                                    <td>@emp.DateOfBirth.ToShortDateString()</td>
                                    <td>@emp.Email</td>
                                    <td>@emp.PhoneNumber</td>
                                    <td>@emp.HireDate.ToShortDateString()</td>
                                    <td>@emp.JobTitle</td>
                                    <td>@emp.Salary</td>
                                    <td>@emp.Department?.DepartmentName</td>
                                    <td>
                                        <form method="post" asp-page-handler="EditEmployee" asp-route-id="@emp.EmployeeID">
                                            <button type="submit" class="btn btn-warning">Edit</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="post" asp-page-handler="DeleteEmployee" asp-route-id="@emp.EmployeeID">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <!-- Employee Pagination Controls -->
            <nav class="d-flex justify-content-between align-items-center my-3" aria-label="Page navigation">
                <!-- Results per page dropdown on the left -->
                <div class="d-flex align-items-center">
                    <label for="resultsPerPage" class="me-2">Results per page:</label>
                    <select id="resultsPerPage" class="form-select me-3" style="width: auto;" onchange="window.location.href = '@Url.Page(null, new { pageNumber = 1, resultsPerPage = "__PLACEHOLDER__" })'.replace('__PLACEHOLDER__', this.value)">
                        @foreach (var size in Model.PageSizes)
                        {
                            <option value="@size" selected="@(Model.EmployeeResultsPerPage == size ? "selected" : null)">@size</option>
                        }
                    </select>
                </div>
                @{
                    int employeeRecordsShown = Math.Min(Model.EmployeeResultsPerPage, Model.TotalEmployees - ((Model.EmployeeCurrentPage - 1) * Model.EmployeeResultsPerPage));
                }
                <span>Records: @employeeRecordsShown of @Model.TotalEmployees</span>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.EmployeeCurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Page(null, new { pageNumber = Model.EmployeeCurrentPage - 1, resultsPerPage = Model.EmployeeResultsPerPage })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <span class="page-link">@Model.EmployeeCurrentPage</span>
                    </li>
                    <li class="page-item @(Model.EmployeeCurrentPage >= Model.EmployeeTotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Page(null, new { pageNumber = Model.EmployeeCurrentPage + 1, resultsPerPage = Model.EmployeeResultsPerPage })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <form method="post" asp-page-handler="ExportToExcelEmployees">
                <button type="submit" class="btn btn-success">
                    Export to XLS
                </button>
            </form>
        </div>
    </div>


    <!-- Add Employee Modal -->
    <div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addEmployeeModalLabel">Add New Employee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="AddEmployee">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.FirstName" class="form-label">First Name</label>
                                <input asp-for="NewEmployee.FirstName" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.LastName" class="form-label">Last Name</label>
                                <input asp-for="NewEmployee.LastName" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.DateOfBirth" class="form-label">Date of Birth</label>
                                <input asp-for="NewEmployee.DateOfBirth" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.Email" class="form-label">Email</label>
                                <input asp-for="NewEmployee.Email" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="NewEmployee.PhoneNumber" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.HireDate" class="form-label">Hire Date</label>
                                <input asp-for="NewEmployee.HireDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.JobTitle" class="form-label">Job Title</label>
                                <input asp-for="NewEmployee.JobTitle" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewEmployee.Salary" class="form-label">Salary</label>
                                <input asp-for="NewEmployee.Salary" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3 d-flex flex-column">
                                <label asp-for="NewEmployee.DepartmentID" class="form-label">Department</label>
                                <select asp-for="NewEmployee.DepartmentID" class="selectpicker w-100" data-live-search="true">
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.DepartmentID" data-tokens="@dept.DepartmentName">@dept.DepartmentName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Department List Card -->
    <div class="card mb-4 shadow-sm" style="border-radius: 10px;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center" style="margin-bottom: 10px;">
                <h3 class="card-title">Departments</h3>
