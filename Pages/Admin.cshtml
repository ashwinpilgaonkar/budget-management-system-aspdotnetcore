                    </li>
                    <li class="page-item @(Model.SpeedTypeCurrentPage >= Model.SpeedTypeTotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Page(null, new { pageNumber = Model.SpeedTypeCurrentPage + 1, resultsPerPage = Model.SpeedTypeResultsPerPage })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <form method="post" asp-page-handler="ExportToExcelSpeedTypes">
                <button type="submit" class="btn btn-success">
                    Export to XLS
                </button>
            </form>
        </div>
    </div>

