@page "/admin"
@model AdminModel
@{
    ViewData["Title"] = "Admin";
}

<div class="container">

    <!-- User List Card -->
    <div class="card mb-4 shadow-sm" style="border-radius: 10px;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center" style="margin-bottom: 10px;">
                <h3 class="card-title">Users</h3>
                <!-- Button to trigger the modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    Add New +
                </button>
            </div>
            <!-- Search Bar -->
            <form method="get">
                <div class="input-group mb-3">
                    <input type="text" name="UserSearchTerm" class="form-control" placeholder="Search..." value="@Model.UserSearchTerm" />
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>
                                User ID
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="UserId" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("UserId")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("UserId")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Email
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="Email" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Email")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Email")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                First Name
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="FirstName" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("FirstName")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("FirstName")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Last Name
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="LastName" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("LastName")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("LastName")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Status
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="Status" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Status")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Status")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Role
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="Role" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Role")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Role")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Phone Number
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="PhoneNumber" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("PhoneNumber")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("PhoneNumber")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Hire Date
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="HireDate" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("HireDate")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("HireDate")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Job Title
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="JobTitle" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("JobTitle")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("JobTitle")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Salary
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="Salary" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Salary")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Salary")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Department
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="User" />
                                    <input type="hidden" name="column" value="Department" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("Department")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("Department")"></i>
                                    </button>
                                </form>
                            </th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users != null)
                        {
                        @foreach (var user in Model.Users)
                        {
                            if (Model.EditingUserID == user.UserId)
                            {
                                <!-- Editing row (no modal) -->
                                <tr>
                                    <td><input asp-for="NewUser.UserId" value="@user.UserId" class="form-control" readonly /></td>
                                    <td><input asp-for="NewUser.Email" value="@user.Email" class="form-control" /></td>
                                    <td><input asp-for="NewUser.FirstName" value="@user.FirstName" class="form-control" /></td>
                                    <td><input asp-for="NewUser.LastName" value="@user.LastName" class="form-control" /></td>
                                    <td>
                                        <select asp-for="NewUser.Status" class="form-control" asp-items="Model.UserStatusOptions"></select>
                                    </td>
                                    <td>
                                        <select asp-for="NewUser.Role" class="form-control" asp-items="Model.UserRoleOptions"></select>
                                    </td>
                                    <td><input asp-for="NewUser.PhoneNumber" value="@user.PhoneNumber" class="form-control" /></td>
                                    <td><input asp-for="NewUser.HireDate" value="@user.HireDate.ToString("yyyy-MM-dd")" type="date" class="form-control" /></td>
                                    <td><input asp-for="NewUser.JobTitle" value="@user.JobTitle" class="form-control" /></td>
                                    <td><input asp-for="NewUser.Salary" value="@user.Salary" type="number" step="0.01" class="form-control" /></td>
                                    <td>
                                        <select asp-for="NewUser.DepartmentID" class="form-control">
                                                @foreach (var dept in Model.Departments)
                                                {
                                                <option value="@dept.DepartmentID">@dept.DepartmentName</option>
                                                }
                                        </select>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-evenly">
                                            <form method="post" asp-page-handler="SaveUser" asp-route-id="@user.UserId">
                                                <button type="submit" class="btn btn-success">Save</button>
                                            </form>
                                            <form method="post" asp-page-handler="CancelEditUser" asp-route-id="@user.UserId">
                                                <button type="submit" class="btn btn-secondary">Cancel</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <!-- Display Mode -->
                                <tr>
                                    <td>@user.UserId</td>
                                    <td>@user.Email</td>
                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.Status</td>
                                    <td>@user.Role</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.HireDate.ToShortDateString()</td>
                                    <td>@user.JobTitle</td>
                                    <td>@user.Salary</td>
                                    <td>@user.Department?.DepartmentName</td>
                                    <td>
                                            <div class="d-flex justify-content-evenly gap-3">
                                            <form method="post" asp-page-handler="EditUser" asp-route-id="@user.UserId">
                                                    <button type="submit" class="btn btn-outline-secondary">Edit</button>
                                            </form>
                                            <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.UserId">
                                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        }
                    </tbody>
                </table>
            </div>

            <!-- User Pagination Controls -->
            <nav class="d-flex justify-content-between align-items-center my-3" aria-label="Page navigation">
                <!-- Results per page dropdown on the left -->
                <div class="d-flex align-items-center">
                    <label for="resultsPerPage" class="me-2">Results per page:</label>
                    <select id="resultsPerPage" class="form-select me-3" style="width: auto;" onchange="window.location.href = '@Url.Page(null, new { pageNumber = 1, resultsPerPage = "__PLACEHOLDER__" })'.replace('__PLACEHOLDER__', this.value)">
                        @foreach (var size in Model.PageSizes)
                        {
                            <option value="@size" selected="@(Model.UserResultsPerPage == size ? "selected" : null)">@size</option>
                        }
                    </select>
                </div>
                @{
                    int userRecordsShown = Math.Min(Model.UserResultsPerPage, Model.TotalUsers - ((Model.UserCurrentPage - 1) * Model.UserResultsPerPage));
                }
                <span>Records: @userRecordsShown of @Model.TotalUsers</span>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.UserCurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Page(null, new { pageNumber = Model.UserCurrentPage - 1, resultsPerPage = Model.UserResultsPerPage })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <span class="page-link">@Model.UserCurrentPage</span>
                    </li>
                    <li class="page-item @(Model.UserCurrentPage >= Model.UserTotalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Page(null, new { pageNumber = Model.UserCurrentPage + 1, resultsPerPage = Model.UserResultsPerPage })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <form method="post" asp-page-handler="ExportToExcelUsers">
                <button type="submit" class="btn btn-success">
                    Export to XLS
                </button>
            </form>
        </div>
    </div>


    <!-- Add User Modal -->
    <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="AddUser">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Email" class="form-label">Email</label>
                                <input asp-for="NewUser.Email" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Password" class="form-label">Password</label>
                                <input asp-for="NewUser.Password" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Status" class="form-label">Status</label>
                                <select asp-for="NewUser.Status" class="form-control" >
                                    <option value="active">active</option>
                                    <option value="inactive">inactive</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Role" class="form-label">Role</label>
                                <select asp-for="NewUser.Role" class="form-control">
                                    <option value="user">user</option>
                                    <option value="admin">admin</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.FirstName" class="form-label">First Name</label>
                                <input asp-for="NewUser.FirstName" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.LastName" class="form-label">Last Name</label>
                                <input asp-for="NewUser.LastName" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.PhoneNumber" class="form-label">Phone Number</label>
                                <input asp-for="NewUser.PhoneNumber" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.HireDate" class="form-label">Hire Date</label>
                                <input asp-for="NewUser.HireDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.JobTitle" class="form-label">Job Title</label>
                                <input asp-for="NewUser.JobTitle" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewUser.Salary" class="form-label">Salary</label>
                                <input asp-for="NewUser.Salary" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3 d-flex flex-column">
                                <label asp-for="NewUser.DepartmentID" class="form-label">Department</label>
                                <select asp-for="NewUser.DepartmentID" class="selectpicker w-100" data-live-search="true">
                                    @if (Model.Departments != null)
                        {
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <option value="@dept.DepartmentID" data-tokens="@dept.DepartmentName">@dept.DepartmentName</option>
                                    }
                        }
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Add</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Department List Card -->
    <div class="card mb-4 shadow-sm" style="border-radius: 10px;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center" style="margin-bottom: 10px;">
                <h3 class="card-title">Departments</h3>
                <!-- Add New Department Button -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDepartmentModal">
                    Add New +
                </button>
            </div>
            <!-- Search Bar -->
            <form method="get">
                <div class="input-group mb-3">
                    <input type="text" name="DepartmentSearchTerm" class="form-control" placeholder="Search..." value="@Model.DepartmentSearchTerm" />
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>
                                Department ID
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Department" />
                                    <input type="hidden" name="column" value="DepartmentID" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("DepartmentID")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("DepartmentID")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>
                                Department Name
                                <form method="get" class="d-inline">
                                    <input type="hidden" name="handler" value="SortColumn" />
                                    <input type="hidden" name="table" value="Department" />
                                    <input type="hidden" name="column" value="DepartmentName" />
                                    <input type="hidden" name="order" value="@Model.SortOrderForColumn("DepartmentName")" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fas @Model.GetSortIcon("DepartmentName")"></i>
                                    </button>
                                </form>
                            </th>
                            <th>SpeedType</th>
                            <th>
                                Budget
                                <div class="dropdown d-inline">
                                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="departmentBudgetFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-filter"></i>
                                    </button>

                                    <div class="dropdown-menu p-3 shadow-lg" style="min-width: 250px;">
                                        <form method="get" id="departmentBudgetFilterForm">
                                            <div class="mb-2">
                                                <label class="form-label">Min Budget (Total)</label>
                                                <input type="number" step="0.01" name="DepartmentMinBudget" id="departmentMinBudgetInput" class="form-control form-control-sm"
                                                       value="@(Model.DepartmentMinBudget?.ToString("0.##") ?? "")" />
                                            </div>

                                            <div class="mb-2">
                                                <label class="form-label">Max Budget (Total)</label>
                                                <input type="number" step="0.01" name="DepartmentMaxBudget" id="departmentMaxBudgetInput" class="form-control form-control-sm"
                                                       value="@(Model.DepartmentMaxBudget?.ToString("0.##") ?? "")" />
                                            </div>

                                            <div class="d-flex justify-content-start gap-2 mt-3">
                                                <button type="submit" class="btn btn-sm btn-primary" id="departmentFilterApplyButton" disabled>Apply</button>
                                                <button type="button" class="btn btn-sm btn-secondary" onclick="resetDepartmentBudgetFields()">Reset</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users != null)
                        {
                        @foreach (var dept in Model.Departments)
                        {
                            if (Model.EditingDepartmentID == dept.DepartmentID)
                            {
                                <tr>
                                    <td><input asp-for="NewDepartment.DepartmentID" value="@dept.DepartmentID" class="form-control" readonly /></td>
                                    <td><input asp-for="NewDepartment.DepartmentName" value="@dept.DepartmentName" class="form-control" /></td>
                                        @*                                         <td>
                                            <select asp-for="SelectedSpeedTypeIds" name="SelectedSpeedTypeIds" class="selectpicker w-100" multiple data-live-search="true">
                                                @foreach (var speedtype in Model.SpeedTypes)
                                                {
                                                    var isSelected = Model.SelectedSpeedTypeIds.Contains(speedtype.SpeedTypeId) ? "selected" : "";
                                                    <option value="@speedtype.SpeedTypeId" isSelected data-tokens="@speedtype.Code">
                                                            @speedtype.Code
                                                    </option>
                                                }
                                            </select>
                                        </td> *@
                                    <td>
                                        <select asp-for="SelectedSpeedTypeIds" class="form-control w-100" multiple data-live-search="true">
                                                @foreach (var speedtype in Model.SpeedTypes)
                                                {
                                                    var isSelected = Model.SelectedSpeedTypeIds.Contains(speedtype.SpeedTypeId) ? "selected" : "";
                                                <option value="@speedtype.SpeedTypeId" isSelected data-tokens="@speedtype.Code">
                                                        @speedtype.Code
                                                </option>
                                                }
                                        </select>
                                    </td>
                                    <td>
                                            @foreach (var deptSpeedType in dept.DepartmentSpeedTypes)
                                            {
                                            <p>@deptSpeedType.SpeedType.Budget</p>
                                            }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-evenly">
                                            <form method="post" asp-page-handler="SaveDepartment" asp-route-id="@dept.DepartmentID">
                                                <button type="submit" class="btn btn-success">Save</button>
                                            </form>
                                            <form method="post" asp-page-handler="CancelEditDepartment" asp-route-id="@dept.DepartmentID">
                                                <button type="submit" class="btn btn-secondary">Cancel</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@dept.DepartmentID</td>
                                    <td>@dept.DepartmentName</td>
                                    <td>
                                        @foreach (var deptSpeedType in dept.DepartmentSpeedTypes)
                                        {
                                            <p>@deptSpeedType.SpeedType.Code</p>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var deptSpeedType in dept.DepartmentSpeedTypes)
                                        {
                                            <p>@deptSpeedType.SpeedType.Budget</p>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-evenly">
                                            <form method="post" asp-page-handler="EditDepartment" asp-route-id="@dept.DepartmentID">
                                                    <button type="submit" class="btn btn-outline-secondary">Edit</button>
                                            </form>
                                            <form method="post" asp-page-handler="DeleteDepartment" asp-route-id="@dept.DepartmentID">
                                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        }
                    </tbody>
                </table>
            </div>


            <!-- Department Pagination Controls -->
            <nav class="d-flex justify-content-between align-items-center my-3" aria-label="Department Page navigation">
                <!-- Results per page dropdown on the left -->
                <div class="d-flex align-items-center">
                    <label for="resultsPerPage" class="me-2">Results per page:</label>
                    <select id="resultsPerPage" class="form-select me-3" style="width: auto;" onchange="window.location.href = '@Url.Page(null, new { departmentPageNumber = 1, departmentsPerPage = "__PLACEHOLDER__" })'.replace('__PLACEHOLDER__', this.value)">
                        @foreach (var size in Model.PageSizes)
                        {
                            <option value="@size" selected="@(Model.DepartmentResultsPerPage == size ? "selected" : null)">@size</option>
                        }
                    </select>
                </div>
                @{
                    int departmentRecordsShown = Math.Min(Model.DepartmentResultsPerPage, Model.TotalDepartments - ((Model.DepartmentCurrentPage - 1) * Model.DepartmentResultsPerPage));
                }
                <span>Records: @departmentRecordsShown of @Model.TotalDepartments</span>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.DepartmentCurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Page(null, new { pageNumber = Model.DepartmentCurrentPage - 1, resultsPerPage = Model.DepartmentResultsPerPage })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <span class="page-link">@Model.DepartmentCurrentPage</span>
                    </li>
                    <li class="page-item @(Model.DepartmentCurrentPage >= Model.DepartmentTotalPages ? "disabled" : "")">
